<?xml version="1.0"?>
<robot name="robotaxi">
  <!-- Base chassis -->
  <link name="base_link">
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.25 0.18 0.05"/>
      </geometry>
      <origin xyz="0 0 0.025"/>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.25 0.18 0.05"/>
      </geometry>
      <origin xyz="0 0 0.025"/>
    </collision>
  </link>

  <!-- Wheels -->
  <link name="left_wheel">
    <visual><geometry><cylinder radius="0.03" length="0.02"/></geometry></visual>
  </link>
  <link name="right_wheel">
    <visual><geometry><cylinder radius="0.03" length="0.02"/></geometry></visual>
  </link>

  <!-- Wheel joints -->
  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0 0.09 0.03" rpy="0 1.5708 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 0 1"/>
  </joint>
  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0 -0.09 0.03" rpy="0 1.5708 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- IMU -->
  <link name="imu_link">
    <inertial><mass value="0.01"/><origin xyz="0 0 0"/><inertia ixx="1e-5" iyy="1e-5" izz="1e-5" ixy="0" ixz="0" iyz="0"/></inertial>
  </link>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.03"/>
  </joint>

  <!-- Camera -->
  <link name="camera_link">
    <visual><geometry><box size="0.02 0.02 0.02"/></geometry></visual>
  </link>
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.1 0 0.10"/>
  </joint>

  <!-- Plugins for Gazebo -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <left_wheel>left_wheel_joint</left_wheel>
      <right_wheel>right_wheel_joint</right_wheel>
      <wheel_separation>0.18</wheel_separation>
      <wheel_radius>0.03</wheel_radius>
      <publish_odom>true</publish_odom>
      <odom_topic>odom</odom_topic>
      <command_topic>cmd_vel</command_topic>
      <publish_odom_tf>true</publish_odom_tf>
    </plugin>
  </gazebo>

  <!-- Camera plugin -->
  <gazebo reference="camera_link">
    <sensor type="camera" name="usb_cam">
      <update_rate>30</update_rate>
      <camera name="head">
        <horizontal_fov>1.39626</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.05</near>
          <far>50</far>
        </clip>
      </camera>
      <plugin name="gazebo_camera_controller" filename="libgazebo_ros_camera.so">
        <camera_name>usb_cam</camera_name>
        <image_topic_name>usb_cam/image_raw</image_topic_name>
        <frame_name>camera_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- IMU plugin -->
  <gazebo reference="imu_link">
    <sensor type="imu" name="imu_sensor">
      <update_rate>50</update_rate>
      <plugin name="imu_plugin" filename="libgazebo_ros_imu_sensor.so">
        <topic_name>imu/data</topic_name>
        <frame_name>imu_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot> 